    <div class="dashboard__main">
      <% if current_user.admin? || current_user.city_keeper? %>
        <div class="dashboard__section">
          <h2 class="dashboard__sectionHeader">Dashboard</h2>
          <div class="dashboard__subSection">
            <h3 class="dashboard__subSectionHeader"><%= "#{'Pending review'.pluralize(@unpublished_spots.size)}" " Â· #{@unpublished_spots.size}" %></h3>
            <div class="dashboard__unpublishedSpots">
              <% @unpublished_spots_by_city.each do |city, spots| %>
                <h3 class="dashboard__subSectionHeader"><%= city.name %></h3>
                <ul class="dashboard__list">
                  <% spots.each do |spot| %>
                    <li class="dashboard__listItem">
                      <p class="dashboard__listItemName"><%= spot.name %></p>
                      <span>&nbsp;Â·&nbsp;</span>
                      <%= link_to spot.owner.username, spot.owner.github_profile if spot.owner.github_profile.present? %>
                      <div class="dashboard__listLinkWrap">
                        <%= link_to "ðŸ‘€ view", spot_path(spot), class: "dashboard__listLink" %>
                        <%= link_to "âœï¸ edit", edit_spot_path(spot), class: "dashboard__listLink" %>
                        <%= link_to "ðŸ—‘ delete", spot_path(spot), method: :delete, class: "dashboard__listLink" %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              <% end %>
            </div>
          </div>
          <% if current_user.admin? %>
            <div class="dashboard__subSection">
              <h3 class="dashboard__subSectionHeader">Countries</h3>
              <ul class="dashboard__list">
                <% @countries.each do |country| %>
                    <li class="dashboard__listItem">
                      <p class="dashboard__listItemName"><%= country.name %></p>
                      <div class="dashboard__listLinkWrap">
                        <%= link_to "âœï¸ edit", edit_country_path(country), class: "dashboard__listLink" %>
                        <%= link_to "ðŸ—‘ delete", country_path(country), method: :delete, class: "dashboard__listLink" %>
                      </div>
                    </li>
                  <% end %>
                </ul>
              <div class="dashboard__link">
                <%= link_to "+ Add new country", new_country_path, class: "link link--underline" %>
              </div>
            </div>
            <div class="dashboard__subSection">
              <h3 class="dashboard__subSectionHeader">Cities</h3>
              <ul class="dashboard__list">
                <% @cities.each do |city| %>
                  <li class="dashboard__listItem">
                    <p class="dashboard__listItemName"><%= city.name %></p>
                    <div class="dashboard__listLinkWrap">
                      <%= link_to "âœï¸ edit", edit_city_path(city), class: "dashboard__listLink" %>
                      <%= link_to "ðŸ—‘ delete", city_path(city), method: :delete, class: "dashboard__listLink" %>
                    </div>
                  </li>
                <% end %>
              </ul>
              <div class="dashboard__link">
                <%= link_to "+ Add new city", new_city_path, class: "link link--underline" %>
              </div>
            </div>
            <div class="dashboard__subSection">
              <h3 class="dashboard__subSectionHeader">Categories</h3>
              <ul class="dashboard__list">
                <% @categories.each do |category| %>
                  <li class="dashboard__listItem">
                    <div class="dashboard__placemarkIcon">
                      <%= show_svg("placemark_#{category.name}.svg") %>
                    </div>
                    <p class="dashboard__listItemName"><%= category.name %></p>
                    <div class="dashboard__listLinkWrap">
                      <%= link_to "âœï¸ edit", edit_category_path(category), class: "dashboard__listLink" %>
                      <%= link_to "ðŸ—‘ delete", category_path(category), method: :delete, class: "dashboard__listLink" %>
                    </div>
                  </li>
                <% end %>
              </ul>
              <div class="dashboard__link">
                <%= link_to "+ Add new category", new_category_path, class: "link link--underline" %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      <% if @spots.any? %>
        <div class="dashboard__section">
          <h2 class="dashboard__sectionHeader">Your Spots</h2>
          <div class="dashboard__publishedSpots">
            <% @published_spots_by_city.each do |city, spots| %>
              <h3 class="dashboard__subSectionHeader"><%= city.name %></h3>
              <ul class="dashboard__list">
                <% spots.each do |spot| %>
                  <li class="dashboard__listItem">
                    <p class="dashboard__listItemName"><%= spot.name %></p>
                    <div class="dashboard__listLinkWrap">
                      <%= link_to "ðŸ‘€ view", spot_path(spot), class: "dashboard__listLink" %>
