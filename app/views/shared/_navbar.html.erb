<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path do %>
    <%= inline_svg_tag("icon_compass.svg", options={class: "icon icon--big icon--compass"}) %>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <%= inline_svg_tag("icon_hamburger.svg", options={class: "icon icon--hamburger"}) %>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto align-items-baseline">
      <li>
        <%= link_to theme_path, method: :put, class: "nav-link" do %>
          <% if cookies[:theme] == "dark" %>
            <%= inline_svg_tag("icon_sun.svg", options={class: "icon icon--small icon--sun"}) %>
          <% else %>
            <%= inline_svg_tag("icon_moon.svg", options={class: "icon icon--small icon--moon"}) %>
          <% end %>
        <% end %>
      </li>
      <% unless current_page?(root_path) %>
        <li><%= link_to "Explore all cities", root_path, class: "nav-link" %></li>
      <% end %>
        <li><%= link_to "Share your ðŸ”¥ spots", new_spot_path, class: "nav-link" %></li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown">
          <%= image_tag current_user.avatar, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "Profile", dashboard_path, class: "dropdown-item" %>
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
