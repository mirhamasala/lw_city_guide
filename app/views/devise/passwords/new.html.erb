<%= content_for(:title, "Request Reset Password Link") %>
<div class="form">
  <h2 class="form__header form__header--center">Forgot your password?</h2>
  <div class="form__main">
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs form__inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions form__button">
        <%= f.button :submit, "Send me reset instructions", class: "button button--primary button--big" %>
      </div>
    <% end %>
  </div>
  <div class="caret-link">
    <%= show_svg("caret_left.svg") %>
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>
</div>
