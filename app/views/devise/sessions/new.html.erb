<div class="wrapper-form">
  <h2 class="headline-primary text-center spacer-md">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs spacer-md">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions button-center spacer-xs">
      <%= f.button :submit, "Log in", class: "button button-primary text-center" %>
    </div>
  <% end %>

  <div class="text-center spacer-md">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link-primary" %><br />
  </div>

  <div class="caret-link">
    <%= show_svg("caret_left.svg") %>
    <%= link_to "Sign up", new_registration_path(resource_name), class: "link-primary" %><br />
  </div>
</div>
