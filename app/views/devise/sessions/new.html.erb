<%= content_for(:title, "Log In") %>
<div class="form">
  <h2 class="form__header form__header--primary form__header--center">Log in</h2>
  <div class="form__main">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form__inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions form__submit-button">
        <%= f.button :submit, "Log in", class: "button button--primary" %>
      </div>
    <% end %>
  </div>
  <div class="form__forgot-password">
    <%= link_to "Forgot your password?", new_password_path(resource_name), class: "link" %><br />
  </div>
  <div class="caret-link">
    <%= show_svg("caret_left.svg") %>
    <%= link_to "Sign up", new_registration_path(resource_name) %><br />
  </div>
</div>
